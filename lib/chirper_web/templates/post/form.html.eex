
<%= form_for @changeset, @action, [id: "tweeted"], fn f -> %> 
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>


  <%= label f, :whats_happening_? %>
  <%= text_input f, :title %>
  <%= error_tag f, :title %>

  <%= label f, :use_tags %>
  <%= textarea f, :body %>
  <%= error_tag f, :body %>

  <div >
    <%= submit "Tweet" %>

  </div>
<% end %>